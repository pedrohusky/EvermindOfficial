<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Transparent"
    android:backgroundTint="@color/Transparent"
    android:drawingCacheQuality="auto"
    android:foregroundTint="@color/Transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditorRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <com.example.Evermind.TESTEDITOR.rteditor.RTEditText
            android:id="@+id/evermindEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:bufferType="editable"
            android:elegantTextHeight="true"
            android:padding="15dp"
            android:visibility="gone">

        </com.example.Evermind.TESTEDITOR.rteditor.RTEditText>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_everPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/imageDecoy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:tag="audioImageDecoy"
            tools:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relative_layout_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/Transparent">


            <LinearLayout
                android:id="@+id/linear_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@color/Transparent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp">

                    <ImageButton
                        android:id="@+id/AudioViewButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@color/Transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/aar_ic_play"
                        android:tint="#C52727" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_visualizer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="@color/Transparent"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/testSwipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/Transparent"
        android:backgroundTint="@color/Transparent"
        android:foregroundTint="@color/Transparent"
        android:orientation="vertical"
        android:visibility="gone"
        app:drag_edge="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/deleteFromRecycler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/roundcorners"
                android:contentDescription="TODO"
                android:elevation="10dp"
                android:src="@android:drawable/ic_menu_delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDrawRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/recycler_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Transparent"
                        android:backgroundTint="@color/Transparent"
                        android:contentDescription="decoy"
                        android:foregroundTint="@color/Transparent"
                        android:visibility="visible" />

                    <com.example.Evermind.EverDraw
                        android:id="@+id/everDraw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>