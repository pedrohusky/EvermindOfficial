<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:background="@color/Transparent"
    android:backgroundTint="@color/Transparent"
    android:drawingCacheQuality="auto"
    android:foregroundTint="@color/Transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditorRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <com.example.Evermind.TESTEDITOR.rteditor.RTEditText
            android:id="@+id/evermindEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/White"
            android:bufferType="spannable"
            android:visibility="gone">

        </com.example.Evermind.TESTEDITOR.rteditor.RTEditText>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.Evermind.EverAudioView
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <ProgressBar
                android:id="@+id/audioViewProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="5dp"
                android:progressTint="#54C63A" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <ImageButton
                    android:id="@+id/AudioViewButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:background="#FFFFFF"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_media_play" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/testSwipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:background="@color/Transparent"
        android:backgroundTint="@color/Transparent"
        android:foregroundTint="@color/Transparent"
        android:orientation="vertical"
        android:visibility="gone"
        app:drag_edge="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/deleteFromRecycler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/roundcorners"
                android:contentDescription="TODO"
                android:elevation="10dp"
                android:src="@android:drawable/ic_menu_delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDrawRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/recycler_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Transparent"
                        android:backgroundTint="@color/Transparent"
                        android:contentDescription="decoy"
                        android:foregroundTint="@color/Transparent"
                        android:visibility="visible" />

                    <com.example.Evermind.EverDraw
                        android:id="@+id/everDraw"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>