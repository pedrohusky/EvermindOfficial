                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/Bullets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/selected_background"
                    android:onClick="paragraphClick"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tag="bullets"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/bullets" />

                <ImageButton
                    android:id="@+id/Numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/selected_background"
                    android:onClick="paragraphClick"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tag="numbers"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/numbers" />

                <ImageView
                    android:id="@+id/paragraph_spacing"
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/Black"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/AlignRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="paragraphClick"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tag="alignRight"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/align_right" />

                <ImageButton
                    android:id="@+id/AlignLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="paragraphClick"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tag="alignLeft"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/align_left" />

                <ImageButton
                    android:id="@+id/AlignCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="paragraphClick"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tag="alignCenter"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/align_center" />

            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

