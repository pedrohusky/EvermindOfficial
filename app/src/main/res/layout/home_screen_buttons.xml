                        android:onClick="paragraphClick"
                        android:padding="4dp"
                        android:scaleType="center"
                        android:scaleX="1.15"
                        android:scaleY="1.15"
                        android:tag="alignRight"
                        android:tint="@color/Black"
                        android:visibility="visible"
                        app:srcCompat="@drawable/align_right" />

                    <com.example.Evermind.TESTEDITOR.toolbar.RTToolbarImageButton
                        android:id="@+id/toolbar_align_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/selected_background"
                        android:backgroundTint="@color/White"
                        android:onClick="paragraphClick"
                        android:padding="4dp"
                        android:scaleType="center"
                        android:scaleX="1.15"
                        android:scaleY="1.15"
                        android:tag="alignLeft"
                        android:tint="@color/Black"
                        android:visibility="visible"
                        app:srcCompat="@drawable/align_left" />

                    <com.example.Evermind.TESTEDITOR.toolbar.RTToolbarImageButton
                        android:id="@+id/toolbar_align_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="7dp"

                        android:layout_weight="1"
                        android:background="@drawable/selected_background"
                        android:backgroundTint="@color/White"
                        android:onClick="paragraphClick"
                        android:padding="4dp"
                        android:scaleType="center"
                        android:scaleX="1.15"
                        android:scaleY="1.15"
                        android:tag="alignCenter"
                        android:tint="@color/Black"
                        android:visibility="visible"
                        app:srcCompat="@drawable/align_center" />

                </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/draw_sizeVisualizerCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:animateLayoutChanges="true"
        android:paddingBottom="5dp"
        android:translationY="-130dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="30dp"
        app:cardElevation="9dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/draw_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/draw_size_visualizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selected_background"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/circle_colors_border"
            app:tint="@color/Black" />

    </androidx.cardview.widget.CardView>

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/viewblur"
        app:blk_fps="30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:blk_blurRadius="25"
        app:blk_downscaleFactor="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.Evermind.EverCircularColorSelect
        android:id="@+id/metaBallMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:tag="empty"
        android:visibility="gone"
        app:angle_between_menu_items="30"
        app:close_animation_duration="1000"
        app:close_interpolator_resource="@anim/interpolator_slight_overshoot"
        app:delay_between_items_animation="40"
        app:layout_constraintBottom_toBottomOf="@id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/include"
        app:main_button_color="@color/White"
        android:backgroundTint="@color/White"
        app:main_button_icon="@drawable/color_selector_icon"
        app:main_button_icon_color="@color/Black"
        app:open_animation_duration="1300"
        app:open_interpolator_resource="@anim/interpolator_slight_overshoot"
        app:position_gravity="center"
        app:radius="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>