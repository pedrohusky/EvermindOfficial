<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/White"
        android:backgroundTint="@color/White"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:id="@+id/mainScreen_ToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:animateLayoutChanges="true">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/toolbar_undo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="undoClick"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_undo_24"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/changeNotecolorButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="changeNoteBalls"
                    android:scaleType="fitCenter"
                    android:src="@drawable/color_selector_icon"
                    android:tag="search"
                    android:tint="@color/Black"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/toolbar_redo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="redoClick"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_redo_24"
                    android:visibility="gone" />

            </LinearLayout>


            <com.alimuzaffar.lib.widgets.AnimatedEditText
                android:id="@+id/searchBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/White"
                android:gravity="center"
                android:inputType="textAutoCorrect|textNoSuggestions|textAutoComplete"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:tag="search"
                android:text="EVERMEMO"
                android:textAlignment="gravity"
                android:textColor="#737373"
                android:textSize="24sp"
                android:textStyle="bold"
                app:animateCursor="true"
                app:animateTextClear="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/Save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="saveButtonClick"
                    android:scaleType="fitCenter"
                    android:tag="Search"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_baseline_search_24"
                    tools:layout_editor_absoluteX="382dp"
                    tools:layout_editor_absoluteY="13dp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/Delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_background"
                    android:onClick="deleteButtonClick"
                    android:scaleType="fitCenter"
                    android:tag="GridLayout"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_baseline_library_books_24"
                    tools:layout_editor_absoluteX="413dp"
                    tools:layout_editor_absoluteY="13dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="@id/tester"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <androidx.cardview.widget.CardView
        android:id="@+id/draw_sizeVisualizerCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingBottom="5dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="30dp"
        app:cardElevation="9dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toTopOf="@id/tester"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ImageView
            android:id="@+id/draw_size_visualizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selected_background"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/circle_colors_border"
            app:tint="@color/Black" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/tester"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include">

        <RelativeLayout
            android:id="@+id/relativeLayout_Buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <me.ibrahimsn.lib.SmoothBottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/White"
            app:duration="400"
            app:iconSize="35dp"
            app:iconTint="@color/Grey"
            app:iconTintActive="@color/Black"
            app:indicatorColor="@color/SkyBlueHighlight"
            app:indicatorRadius="20dp"
            app:itemPadding="5dp"
            app:menu="@menu/note_bottom_options"
            app:sideMargins="10dp"
            app:textColor="@color/Black"
            app:textSize="0sp" />

    </LinearLayout>

    <com.example.Evermind.EverCircularColorSelect
        android:id="@+id/metaBallMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:backgroundTint="@color/White"
        android:tag="empty"
        android:visibility="gone"
        app:angle_between_menu_items="30"
        app:close_animation_duration="1000"
        app:close_interpolator_resource="@anim/interpolator_slight_overshoot"
        app:delay_between_items_animation="40"
        app:layout_constraintBottom_toBottomOf="@id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/include"
        app:main_button_color="@color/White"
        app:main_button_icon="@drawable/color_selector_icon"
        app:main_button_icon_color="@color/Black"
        app:open_animation_duration="1300"
        app:open_interpolator_resource="@anim/interpolator_slight_overshoot"
        app:position_gravity="center"
        app:radius="70dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transitionlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/EvermindBlack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/DescriptionEvermindblack"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/startButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/evermindblack" />

        <Button
            android:id="@+id/startButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="158dp"
            android:layout_height="144dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/elephantpressedandpush"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>