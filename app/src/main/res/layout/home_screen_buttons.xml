<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/top_bar_corner"
        android:backgroundTint="@color/White"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:id="@+id/mainScreen_ToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="13dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/toolbar_undo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/selected_background"
                android:onClick="undoClick"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_baseline_undo_24" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/toolbar_redo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/selected_background"
                android:onClick="redoClick"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_baseline_redo_24" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/changeNotecolorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/selected_background"
                android:onClick="changeNoteBalls"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:tag="search"
                android:tint="@color/Black"
                android:visibility="gone"
                app:srcCompat="@drawable/color_selector_icon" />

            <com.alimuzaffar.lib.widgets.AnimatedEditText
                android:id="@+id/searchBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Transparent"
                android:gravity="center"
                android:inputType="textAutoCorrect|textNoSuggestions|textAutoComplete"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:tag="search"
                android:text="EVERMEMO"
                android:textColor="#737373"
                android:textSize="24sp"
                android:textStyle="bold"
                app:animateCursor="true"
                app:animateTextClear="true" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Save"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selected_background"
                android:onClick="saveButtonClick"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:tag="Search"
                android:tint="@color/Black"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_baseline_search_24"
                tools:layout_editor_absoluteX="382dp"
                tools:layout_editor_absoluteY="13dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/selected_background"
                android:onClick="deleteButtonClick"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:tag="GridLayout"
                android:tint="@color/Black"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_baseline_library_books_24"
                tools:layout_editor_absoluteX="413dp"
                tools:layout_editor_absoluteY="13dp" />

        </LinearLayout>

