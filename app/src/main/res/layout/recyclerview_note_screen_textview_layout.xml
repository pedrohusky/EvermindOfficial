<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_NoteScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/Transparent"
    android:backgroundTint="@color/Transparent"
    android:foregroundTint="@color/Transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNoteScreenEditor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp">

        <com.example.Evermind.TESTEDITOR.rteditor.RTTextView
            android:id="@+id/recycler_everEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:backgroundTint="@color/White"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLines="7"
            android:textSize="24sp"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_everNoteScreenPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:minHeight="35dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="25dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/imageDecoy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="audioImageDecoy"
            android:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_visualizer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/Transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNoteScreenDraw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/recycler_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Transparent"
            android:backgroundTint="@color/Transparent"
            android:foregroundTint="@color/Transparent"
            android:scaleType="fitXY"
            android:translationY="-2dp"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

</LinearLayout>