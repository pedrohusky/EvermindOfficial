<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/format_selectors"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:visibility="visible"
    app:cardBackgroundColor="@color/White"
    app:cardCornerRadius="0dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/IncreaseSize1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="increaseSize"
            android:tint="@color/Black"
            app:srcCompat="@drawable/text_size_up" />

        <ImageButton
            android:id="@+id/DecreaseSize1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="decreaseSize"
            android:tint="@color/Black"
            app:srcCompat="@drawable/text_size_down" />

        <ImageButton
            android:id="@+id/ChangeColor1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="changeColor"
            android:tint="@color/Black"
            app:srcCompat="@drawable/color_selector_icon" />

        <com.example.Evermind.TESTEDITOR.toolbar.RTToolbarImageButton
            android:id="@+id/toolbar_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:backgroundTint="@color/White"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="bold"
            android:tint="@color/Black"
            app:srcCompat="@drawable/bold_icon" />

        <com.example.Evermind.TESTEDITOR.toolbar.RTToolbarImageButton
            android:id="@+id/toolbar_italic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:backgroundTint="@color/White"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="italic"
            android:tint="@color/Black"
            app:srcCompat="@drawable/italic_icon" />

        <com.example.Evermind.TESTEDITOR.toolbar.RTToolbarImageButton
            android:id="@+id/toolbar_underline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:backgroundTint="@color/White"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="underline"
            android:tint="@color/Black"
            app:srcCompat="@drawable/underline_icon" />

        <com.example.Evermind.TESTEDITOR.toolbar.RTToolbarImageButton
            android:id="@+id/toolbar_strikethrough"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:backgroundTint="@color/White"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="striketrough"
            android:tint="@color/Black"
            app:srcCompat="@drawable/striketrough_icon" />

        <ImageButton
            android:id="@+id/HighlightText1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:backgroundTint="@color/White"
            android:onClick="formatClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tag="highlight"
            android:tint="@color/Black"
            app:srcCompat="@drawable/highlight_text_icon" />

    </LinearLayout>

</androidx.cardview.widget.CardView>