<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditorRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/evermindEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </jp.wasabeef.richeditor.RichEditor>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDrawRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/recycler_imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/Transparent"
                android:backgroundTint="@color/Transparent"
                android:contentDescription="decoy"
                android:foregroundTint="@color/Transparent"
                android:visibility="gone" />

            <com.example.Evermind.EverDraw
                android:id="@+id/everDraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>