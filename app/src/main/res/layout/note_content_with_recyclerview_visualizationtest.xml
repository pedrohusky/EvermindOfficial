<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/testSwipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/Transparent"
    android:backgroundTint="@color/Transparent"
    android:drawingCacheQuality="auto"
    android:foregroundTint="@color/Transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bkg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/deleteSwipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/roundcorners"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tag="delete"
                    android:tint="#FF5722" />

                <ImageButton
                    android:id="@+id/changeColorSwipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/roundcorners"
                    android:src="@drawable/color_selector_icon"
                    android:tag="changeColor"
                    android:tint="#2196F3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Transparent"
        android:backgroundTint="@color/Transparent"
        android:foregroundTint="@color/Transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="15dp"
            android:animateLayoutChanges="true"
            android:minWidth="185dp"
            android:tag="second"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:id="@+id/noteLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:minWidth="185dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/Transparent"
                    android:backgroundTint="@color/Transparent"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLength="20"
                    android:minWidth="185dp"
                    android:paddingHorizontal="10dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:textSize="22dp"
                    android:visibility="visible"
                    app:autoSizeMaxTextSize="18dp"
                    app:autoSizeMinTextSize="14dp"
                    app:autoSizeTextType="uniform" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/DrawAndTextNoteScreenRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="185dp">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerNoteScren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    android:layoutAnimation="@anim/grid_appear_layout_animation" />

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</com.daimajia.swipe.SwipeLayout>