<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectOptions"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:visibility="visible"
    app:cardBackgroundColor="@color/White"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/selectAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:onClick="selectAllClick"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tint="@color/Black"
            app:srcCompat="@android:drawable/ic_secure" />

        <ImageButton
            android:id="@+id/selectChangeColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:elevation="2dp"
            android:onClick="openColorSelectorSelection"
            android:padding="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/color_selector_icon" />

        <ImageButton
            android:id="@+id/selectDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selected_background"
            android:onClick="deleteSelection"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:tint="@color/Black"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </LinearLayout>
</androidx.cardview.widget.CardView>