<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/draw_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:animateLayoutChanges="true"
        android:paddingBottom="5dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="30dp"
        app:cardElevation="9dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <HorizontalScrollView
            android:id="@+id/scroll_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="bottom|center_horizontal"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/Drawblack"
                    android:tag="black"
                    android:onClick="drawColorChangeClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/selected_background"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tint="@color/Black"
                    android:visibility="visible"
                    app:srcCompat="@drawable/circle_colors_border" />

                <ImageButton
                    android:id="@+id/Drawblue"
                    android:tag="blue"
                    android:onClick="drawColorChangeClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/selected_background"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tint="@color/SkyBlue"
                    android:visibility="visible"
                    app:srcCompat="@drawable/circle_colors_border" />

                <ImageButton
                    android:id="@+id/Drawpurple"
                    android:tag="purple"
                    android:onClick="drawColorChangeClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/selected_background"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tint="@color/Pink"
                    android:visibility="visible"
                    app:srcCompat="@drawable/circle_colors_border" />

                <ImageButton
                    android:id="@+id/Drawmagenta"
                    android:tag="magenta"
                    android:onClick="drawColorChangeClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/selected_background"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tint="@color/Magenta"
                    android:visibility="visible"
                    app:srcCompat="@drawable/circle_colors_border" />

                <ImageButton
                    android:id="@+id/Draworange"
                    android:tag="orange"
                    android:onClick="drawColorChangeClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/selected_background"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tint="@color/Orange"
                    android:visibility="visible"
                    app:srcCompat="@drawable/circle_colors_border" />

                <ImageButton
                    android:id="@+id/Drawyellow"
                    android:tag="yellow"
                    android:onClick="drawColorChangeClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/selected_background"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tint="@color/YellowSun"
                    android:visibility="visible"
                    app:srcCompat="@drawable/circle_colors_border" />

                <ImageButton
                    android:id="@+id/Drawgreen"
                    android:tag="green"
                    android:onClick="drawColorChangeClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/selected_background"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:tint="@color/GrassGreen"
                    android:visibility="visible"
                    app:srcCompat="@drawable/circle_colors_border" />

            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>