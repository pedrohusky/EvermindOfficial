<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1250"
        motion:motionInterpolator="easeInOut"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/EvermindBlack"
               motion:framePosition="0"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/EvermindBlack"
               motion:framePosition="0"
               android:scaleY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/startButton"
               motion:framePosition="0"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/startButton"
               motion:framePosition="0"
               android:scaleY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/EvermindBlack"
               motion:framePosition="60"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/EvermindBlack"
               motion:framePosition="60"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/startButton"
               motion:framePosition="60"
               android:scaleX="1.4" />
           <KeyAttribute
               motion:motionTarget="@+id/startButton"
               motion:framePosition="60"
               android:scaleY="1.4" />

           <KeyAttribute
               motion:motionTarget="@+id/EvermindBlack"
               motion:framePosition="100"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/EvermindBlack"
               motion:framePosition="100"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/startButton"
               motion:framePosition="100"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/startButton"
               motion:framePosition="100"
               android:scaleY="1.2" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:duration="1000"
        motion:constraintSetEnd="@+id/finalOne"
        motion:motionInterpolator="easeIn">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/startButton"
                motion:framePosition="0"
                android:scaleX="1.2" />
            <KeyAttribute
                motion:motionTarget="@+id/startButton"
                motion:framePosition="0"
                android:scaleY="1.2" />
            <KeyAttribute
                motion:motionTarget="@+id/startButton"
                motion:framePosition="60"
                android:scaleX="0.8" />
            <KeyAttribute
                motion:motionTarget="@+id/startButton"
                motion:framePosition="60"
                android:scaleY="0.8" />

            <KeyAttribute
                motion:motionTarget="@+id/startButton"
                motion:framePosition="100"
                android:scaleX="220" />
            <KeyAttribute
                motion:motionTarget="@+id/startButton"
                motion:framePosition="100"
                android:scaleY="220" />
    </KeyFrameSet>
        <OnClick motion:targetId="@+id/startButton" />
    </Transition>
    <ConstraintSet android:id="@+id/finalOne" />

</MotionScene>